<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary colors for light theme -->
    <Color x:Key="PrimaryColor">#FF4081</Color>
    <!-- Example accent color -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <!-- White background for light theme -->
    <Color x:Key="TextPrimaryColor">#333333</Color>
    <!-- Dark text color -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
</ResourceDictionary>
